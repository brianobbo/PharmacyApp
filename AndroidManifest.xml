<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.usf.cse.labrador.familycare">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDnwLF2-WfK8cVZt9OoDYJ9Y8kspXhEHfI" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <receiver android:name=".AlarmReceiver" />
        <receiver
            android:name=".AlarmBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Dashboard"
            android:label="User Dashboard"
            android:parentActivityName=".Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Login" />
        </activity>
        <activity
            android:name=".ContactPharmacy"
            android:label="Contact Pharmacy"
            android:parentActivityName=".Dashboard">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Dashboard" />
        </activity>
        <activity
            android:name=".MedicationDetails"
            android:label="Medication Details"
            android:parentActivityName=".Dashboard">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Dashboard" />
        </activity>
        <activity
            android:name=".BarcodeActivity"
            android:label="@string/title_activity_barcode"
            android:launchMode="singleTop"
            android:parentActivityName=".Dashboard"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Dashboard" />
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:launchMode="singleTop"
            android:parentActivityName=".Dashboard"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Dashboard" />
        </activity>
        <activity
            android:name=".Refill"
            android:label="Refill"
            android:parentActivityName=".Dashboard">

            <!--
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.usf.cse.labrador.familycare.Dashboard" />
        </activity>
        <activity android:name=".DisplayAlarmsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Dashboard" />
        </activity>
        <activity android:name=".FrequentReminderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayAlarmsActivity" />
        </activity>
        <activity android:name=".OneTimeReminderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DisplayAlarmsActivity" />
        </activity>


    </application>

</manifest>